<Window x:Class="JaimesHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="137,106,0,0" TextWrapping="Wrap" Text="{Binding PodComms.IsConnected}" VerticalAlignment="Top"/>
        <Button Command="{Binding StartPumpCommand}" HorizontalAlignment="Left" Margin="222,172,0,0" VerticalAlignment="Top" Width="75">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Start"/>
                <!--<TextBlock Text="Stop"/>-->
                
                
            </StackPanel>
        </Button>
        <Button Command="{Binding StopPumpCommand}" HorizontalAlignment="Left" Margin="302,172,0,0" VerticalAlignment="Top" Width="75">
            <TextBlock Text="Stop"/>
        </Button>


    </Grid>
</Window>
